<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:lootie="http://schemas.android.com/apk/res-auto">


    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/splash_animation"
        lootie:lottie_rawRes="@raw/splash"
        lootie:lottie_autoPlay="true"
        lootie:lottie_loop="true"
        lootie:layout_constraintTop_toTopOf="parent"
        lootie:layout_constraintBottom_toBottomOf="parent"
        lootie:layout_constraintRight_toRightOf="parent"
        lootie:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>